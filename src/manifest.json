{
	"manifest_version": 2,
	"name": "OSM DWG Helper",
	"version": "0.6.12",
	"description": "Tools for OSM issues and OTRS tickets",
	"homepage_url": "https://github.com/AntonKhorev/osm-dwg-helper",
	"author": "Anton Khorev",
	"icons": {
		"64": "icon.png"
	},

	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"browser_style": true,
		"default_title": "DWG Helper",
		"default_icon": "icons/default.svg",
		"default_popup": "popup.html"
	},
	"sidebar_action": {
		"default_title": "DWG Helper",
		"default_icon": "icons/default.svg",
		"default_panel": "sidebar.html"
	},
	"options_ui": {
		"page": "options.html"
 	},

	"permissions": [
		"storage",
		"tabs"
	],
	"optional_permissions": [
		"downloads",
		"<all_urls>",
		"webRequest",
		"webRequestBlocking"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "osm-dwg-helper@antonkhorev.github.io"
		}
	}
}
